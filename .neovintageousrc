" Type :h neovintageousrc for help.
noremap J 5j
noremap K 5k
noremap W 5w
noremap B 5b
noremap M J
noremap 0 ^
noremap ) 0
noremap ; :
" g_ goes to end of line without newline character
noremap $ g_
" nnoremap ; :
" below is: noremap < ,
noremap m `
noremap ` m
noremap ' "
noremap q @
noremap @ q
noremap qq @@
noremap <lt> ,
noremap , ;
noremap <C-s> :w<CR>
vnoremap <Tab> >gv
vnoremap <S-Tab> <gv

set ignorecase

" Stupid hack since .neovintageousrc needs <Space> (can't indent)
try
let mapleader="<Space>"
catch
endtry
" No effect in Neovintageous
if 1
    let mapleader = "\<Space>"
    imap jj <Esc>
    set number
    set expandtab ts=4 sw=4 ai
    func! GetSelectedText()
        normal gv"xy
        let result = getreg("x")
        return result
    endfunc
    " For WSL accessing Windows clipboard
    if !has("clipboard") && executable("clip.exe")
        noremap <C-c> :call system('clip.exe', GetSelectedText())<CR>
        noremap <C-x> :call system('clip.exe', GetSelectedText())<CR>gvx
    endif
" Neovintageous specific
else
noremap <Leader><Tab> :NextViewInStack<CR>
noremap <Leader>j :PrevView<CR>
noremap <Leader>k :NextView<CR>
noremap <Leader>h :FocusGroup group=0<CR>
noremap <Leader>l :FocusGroup group=1<CR>
endif

" Yank and paste using system clipboard.
noremap <leader>y "+y
noremap <leader>Y "+Y
noremap <leader>p "+p
noremap <leader>P "+P
noremap <leader>d "+d
noremap <leader>D "+D

nnoremap <Leader>a ggVG
